
<% if flash[:error] %>
  <p style='color:red'><%= flash[:error] %></p>
<% end %>

<%= form_for @patient, :html => {:class => "bg-white shadow-md rounded p-8 m-6 w-1/3"} do |f| %>

  <div class="field">
    <%= f.label :first_name, class: "block text-gray-700 text-sm font-bold mb-0" %>
    <br>
    <%= f.text_field :first_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5" %>
  </div>
  <div class="field">
    <%= f.label :last_name, class: "block text-gray-700 text-sm font-bold mb-0" %>
    <br>
    <%= f.text_field :last_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5" %>
  </div>
  <div class="field">
    <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-0" %>
    <br>
    <%= f.text_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5" %>
  </div>
  <div class="field">
    <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-0" %>
    <br>
    <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5" %>
  </div>
  <div class="field">
  <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-0" %>
  <br>
  <%= f.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5" %>
  </div>
  <%= f.submit %>

<% end %>
